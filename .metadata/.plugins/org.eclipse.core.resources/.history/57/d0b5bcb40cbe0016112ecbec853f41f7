package dao;

import java.util.List;

import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;

import dominio.Maquina;


public class MaquinaDAO extends DAO{

	
	public List<Maquina> findAllMaquinasWithProduction(){
		
		Criteria c = getSession().createCriteria(Maquina.class, "maquina");
		
		c.createCriteria("alimento", "Alimento",Criteria.INNER_JOIN);
		c.add(Restrictions.eq("alimento.id", "maquina.id"));
		
		return c.list();
	}
}
